
<%- include('partials/_header') %>

<div class="container">
    <!-- FORM -->
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title">Pedidos (<%=pedidos.length%>)</h4>
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <div class="row ml-1">
                                <label for="enteras">Enteras </label>
                                <p class="text-primary ml-1" id="pEnteras">(<%= totalEnt %>)</p>
                            </div>
                            <input type="number" name="enteras" id="enteras" class="form-control mb-2">
                            <div class="row ml-1">
                                <label for="enteras">Descremadas </label>
                                <p class="text-success ml-1">(<%= totalDesc %>)</p>
                            </div>
                            <input type="number" name="descremadas" id="descremadas" class="form-control mb-2">
                            <label for="celu">Celular</label>
                            <input type="number" name="celular" id="celular" class="form-control mb-2">
                            <label for="punto_retiro">Punto de Retiro</label>
                            <select name="punto_retiro" id="punto_retiro" class="form-control mb-4">
                                <option value="" disabled selected>Eleg√≠ un punto de retiro</option>
                                <option value="D1">D1 - Distrito Sur</option>
                                <option value="D2">D2 - Distrito Sudoeste</option>
                                <option value="D3">D3 - Distrito Oeste</option>
                                <option value="D4">D4 - Distrito Noroeste</option>
                                <option value="D5">D5 - Distrito Norte</option>
                                <option value="D6">D6 - Distrito Centro</option>
                            </select>
                            <button type="submit" class="btn btn-success btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--LISTA-->
</div>

<%- include('partials/_footer') %>